---
import '../styles/global.css'
import BaseLayout from '../layouts/BaseLayout.astro';
const pageTitle = "About me";

const identity = {
  firstName: 'Michael',
  country: 'United States',
  occupation: 'Software Engineer',
  hobbies: ['Programming', 'Rock Climbing', 'Reading', 'Aquariums'],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Writing Docs"];
const happy = true;
const finished = true;
const goal = 3;

const skillColor = 'navy';
const fontWeight = 'bolder';
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{pageTitle}</title>
  </head>
  <body>
    <style is:global define:vars={{skillColor, fontWeight}}>
      h1{
        color: purple;
        font-size: 4rem;
      }
      .skill{
        color: var(--skillColor);
        font-weight: var(--fontWeight);
      }
    </style>

    <BaseLayout pageTitle = { pageTitle }>
    <p>Here is a few things about me:</p>
    <ul>
      <li>my name is {identity.firstName}!</li>
      {identity.hobbies.length >= 2 &&
        <li>Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}</li>
      }
    </ul>
    <p>My skills are:</p>
    <ul>
      {skills.map((skill) => <li class="skill">{skill}</li>)}

      {happy && <p>I am happy to be learning Astro!</p>}
      {finished && <p>I have finished the tutorial!</p>}
      {goal === 3 ? <p>My goal is to finish in 3 days </p> : <p> My goal is to not finish in 3 days </p>}
    </ul>
    <script>
      import "../scripts/menu.js";
    </script>
		</BaseLayout>
  </body>
</html>